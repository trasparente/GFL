{
  "$schema": "http://json-schema.org/schema#",
  "id": "https://rawgit.com/fork-n-play/GFL/master/schema/setup.json",
  "type": "object",
  "title": "Setup",
  "description": "Setup values for GFL",
  "properties": {
    "rolls": {
      "type": "array",
      "title": "Rolls",
      "description": "Base dice rolls",
      "format": "tabs",
      "uniqueItems": true,
      "items": {
        "type": "object",
        "title": "Roll",
        "headerTemplate": "{{self.title}}",
        "properties": {
          "title": {
            "type": "string",
            "title": "Title",
            "description": "Title of the roll",
            "minLength": 1
          },
          "dices": {
            "type": "integer",
            "title": "Dices",
            "description": "Number of dices in a roll",
            "minimum": 1,
            "default": 1
          },
          "sides": {
            "type": "array",
            "format": "tabs",
            "title": "Sides",
            "description": "Sides of each dice",
            "minItems": 1,
            "uniqueItems": true,
            "items": {
              "type": "object",
              "headerTemplate": "{{self.symbol}}",
              "properties": {
                "symbol": {
                  "type": "string",
                  "title": "Symbol",
                  "minLength": 1
                },
                "value": {
                  "type": "number",
                  "title": "Value"
                }
              },
              "required": [
                "symbol",
                "value"
              ]
            },
            "options": {
              "disable_array_reorder": true
            }
          }
        },
        "required": [
          "title",
          "dices",
          "sides"
        ]
      }
    },
    "gauges": {
      "type": "array",
      "title": "Gauges",
      "description": "Graduated value associated with a name",
      "format": "tabs",
      "uniqueItems": true,
      "items": {
        "type": "object",
        "id": "gauge",
        "title": "Gauge",
        "headerTemplate": "{{self.title}}",
        "properties": {
          "title": {
            "type": "string",
            "title": "Title",
            "minLength": 1
          },
          "description": {
            "type": "string",
            "title": "Description"
          },
          "full_name": {
            "type": "string",
            "template": "{{title}} {{description}}",
            "watch": {
              "title": "gauge.title",
              "description": "gauge.description"
            },
            "options": {
              "hidden": true
            }
          }
        },
        "required": [
          "title",
          "description"
        ]
      },
      "options": {
        "disable_array_reorder": true
      }
    },
    "team": {
      "type": "object",
      "id": "team",
      "title": "Team",
      "description": "Schema for a team",
      "properties": {
        "name": {
          "type": "string",
          "title": "Team name",
          "minLength": 1
        },
        "username": {
          "type": "string",
          "title": "Team username",
          "options": {
            "hidden": true
          }
        }
      }
    },
    "leagues": {
      "type": "array",
      "id": "leagues",
      "title": "Leagues",
      "items": {
        "league": {
          "type": "object",
          "id": "league",
          "title": "League",
          "description": "Schema for a league",
          "properties": {
            "name": {
              "type": "string",
              "title": "League name",
              "minLength": 1
            },
            "slug": {
              "type": "string",
              "title": "League slug",
              "options": {
                "hidden": true
              }
            },
            "running": {
              "type": "boolean",
              "title": "League running",
              "format": "checkbox",
              "default": false
            },
            "standings": {
              "type": "array",
              "title": "Standings",
              "description": "League standings",
              "uniqueItems": true,
              "items": {
                "type": "object",
                "title": "Position",
                "description": "Standing position",
                "properties": {
                  "name": {
                    "type": "string",
                    "title": "Team name"
                  },
                  "username": {
                    "type": "string",
                    "title": "Team username",
                    "options": {
                      "hidden": true
                    }
                  },
                  "win": {
                    "type": "number",
                    "title": "Matches won"
                  },
                  "tie": {
                    "type": "number",
                    "title": "Matches tied"
                  },
                  "lost": {
                    "type": "number",
                    "title": "Matches lost"
                  },
                  "matches": {
                    "type": "number",
                    "title": "Matches played"
                  }
                }
              }
            },
            "rounds": {
              "type": "array",
              "title": "Rounds",
              "description": "Rounds of the league",
              "uniqueItems": true,
              "items": {
                "type": "object",
                "title": "Round",
                "description": "Round",
                "properties": {
                  "date": {
                    "type": "number",
                    "title": "Date and time",
                    "description": "Round date and time in unix-time"
                  },
                  "matches": {
                    "type": "array",
                    "title": "Matches",
                    "description": "Matches of the round",
                    "items": {
                      "type": "object",
                      "title": "Match",
                      "description": "Match",
                      "properties": {
                        "venue": {
                          "type": "object",
                          "title": "Venue",
                          "properties": {
                            "weather": {
                              "type": "string",
                              "title": "Weather"
                            },
                            "stadium": {
                              "type": "string",
                              "title": "Stadium"
                            },
                            "attendance": {
                              "type": "number",
                              "title": "Attendance"
                            }
                          }
                        },
                        "home": {
                          "type": "object",
                          "title": "Home",
                          "description": "Home team",
                          "properties": {
                            "name": {
                              "type": "string",
                              "title": "Team name",
                              "minLength": 1
                            },
                            "username": {
                              "type": "string",
                              "title": "Team username",
                              "options": {
                                "hidden": true
                              }
                            },
                            "score": {
                              "type": "number",
                              "title": "Points scored"
                            }
                          }
                        },
                        "away": {
                          "type": "object",
                          "title": "Away",
                          "description": "Away team",
                          "properties": {
                            "name": {
                              "type": "string",
                              "title": "Team name",
                              "minLength": 1
                            },
                            "username": {
                              "type": "string",
                              "title": "Team username",
                              "options": {
                                "hidden": true
                              }
                            },
                            "score": {
                              "type": "number",
                              "title": "Points scored"
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "required": [
            "name"
          ]
        }
      }
    }
  },
  "required": [
    "rolls",
    "gauges"
  ]
}
